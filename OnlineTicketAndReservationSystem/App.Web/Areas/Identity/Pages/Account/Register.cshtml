@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-4">
                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                                <h2>Create a new account.</h2>
                                <hr />
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.User.EmailAddress" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                    <label asp-for="Input.User.EmailAddress"></label>
                                    <span asp-validation-for="Input.User.EmailAddress" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.User.FirstName" class="form-control" autocomplete="firstname" aria-required="true" placeholder="firstname" />
                                    <label asp-for="Input.User.FirstName"></label>
                                    <span asp-validation-for="Input.User.FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.User.LastName" class="form-control" autocomplete="lastname" aria-required="true" placeholder="lastname" />
                                    <label asp-for="Input.User.LastName"></label>
                                    <span asp-validation-for="Input.User.LastName" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.User.MobileNumber" class="form-control" autocomplete="mobilenumber" aria-required="true" placeholder="mobilenumber" />
                                    <label asp-for="Input.User.MobileNumber"></label>
                                    <span asp-validation-for="Input.User.MobileNumber" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.User.Password" class="form-control" autocomplete="password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.User.Password"></label>
                                    <span asp-validation-for="Input.User.Password" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.User.ConfirmPassword" class="form-control" autocomplete="confirm-password" aria-required="true" placeholder="confirm-password" />
                                    <label asp-for="Input.User.ConfirmPassword"></label>
                                    <span asp-validation-for="Input.User.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.File" type="file" class="form-control" aria-required="true" />
                                    <label asp-for="Input.File"></label>
                                    <span asp-validation-for="Input.File" class="text-danger"></span>
                                </div>
                                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                            </form>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>
</html>